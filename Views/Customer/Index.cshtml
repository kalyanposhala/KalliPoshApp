@model List<KalliPoshApp.Models.Customers>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Custmors</h2>


@if (Model.Count == 0)
{
    <p>We don not have customers now </p>
}
else
{
    <table class="table table-bordered table-hover">
        <tbody>
            <tr>
                <th>Custmors</th>
                <th>Membership Name</th>
            </tr>

            @foreach (var cust in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(cust.Name, "Detail", new { Id = cust.Id })
                    </td>
                    <td>
                        @cust.MembershipName
                    </td>
                </tr>

            }

        </tbody>
    </table>
}
